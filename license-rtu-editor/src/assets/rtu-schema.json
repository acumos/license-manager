{
  "definitions": {},
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://example.com/root.json",
  "type": "object",
  "title": "The Root Schema",
  "required": [
    "@context",
    "@type",
    "uid",
    "permission"
  ],
  "properties": {
    "@context": {
      "$id": "#/properties/@context",
      "type": "object",
      "title": "The @context Schema",
      "required": [
        "@vocab",
        "vcard"
      ],
      "properties": {
        "@vocab": {
          "$id": "#/properties/@context/properties/@vocab",
          "type": "string",
          "title": "The @vocab Schema",
          "default": "https://www.w3.org/ns/odrl.jsonld",
          "examples": [
            "https://www.w3.org/ns/odrl.jsonld"
          ],
          "pattern": "^(.*)$"
        },
        "vcard": {
          "$id": "#/properties/@context/properties/vcard",
          "type": "string",
          "title": "The Vcard Schema",
          "default": "http://www.w3.org/2006/vcard/ns#",
          "examples": [
            "http://www.w3.org/2006/vcard/ns#"
          ],
          "pattern": "^(.*)$"
        }
      }
    },
    "@type": {
      "$id": "#/properties/@type",
      "type": "string",
      "title": "The @type Schema",
      "default": "Agreement",
      "examples": [
        ""
      ],
      "pattern": "^(.*)$"
    },
    "uid": {
      "$id": "#/properties/uid",
      "type": "string",
      "title": "Agreement UID",
      "default": "",
      "examples": [
        "http://lumserver/agreement/93e41ce5-e4bf-446f-87fa-4f1c6b780220"
      ],
      "pattern": "^(.*)$"
    },
    "permission": {
      "$id": "#/properties/permission",
      "type": "array",
      "title": "Permission to Use",
      "items": {
        "$id": "#/properties/permission/items",
        "type": "object",
        "title": "The Items Schema",
        "required": [
          "@type",
          "target",
          "assigner",
          "assignee",
          "action",
          "constraint"
        ],
        "properties": {
          "@type": {
            "$id": "#/properties/permission/items/properties/@type",
            "type": "string",
            "title": "The @type Schema",
            "default": "Rule",
            "examples": [
              "Rule"
            ],
            "pattern": "^(.*)$"
          },
          "target": {
            "$id": "#/properties/permission/items/properties/target",
            "type": "string",
            "title": "Target Asset IRI",
            "default": "",
            "examples": [
              "http://acumos-bionic-2:30883/example-model_f81e8a22-5cfa-4053-9a66-b884d2dc0473:1"
            ],
            "pattern": "^(.*)$"
          },
          "assigner": {
            "$id": "#/properties/permission/items/properties/assigner",
            "type": "object",
            "title": "Supplier",
            "required": [
              "@type",
              "uid",
              "vcard:fn",
              "vcard:hasEmail"
            ],
            "properties": {
              "@type": {
                "$id": "#/properties/permission/items/properties/assigner/properties/@type",
                "type": "array",
                "title": "The @type Schema",
                "items": {
                  "$id": "#/properties/permission/items/properties/assigner/properties/@type/items",
                  "type": "string",
                  "title": "The Items Schema",
                  "default": "Party",
                  "examples": [
                    "Party",
                    "vcard:Organization"
                  ],
                  "pattern": "^(.*)$"
                }
              },
              "uid": {
                "$id": "#/properties/permission/items/properties/assigner/properties/uid",
                "type": "string",
                "title": "Company URL",
                "default": "",
                "examples": [
                  "http://companya.com/"
                ],
                "pattern": "^(.*)$"
              },
              "vcard:fn": {
                "$id": "#/properties/permission/items/properties/assigner/properties/vcard:fn",
                "type": "string",
                "title": "Company name",
                "default": "",
                "examples": [
                  "Company A"
                ],
                "pattern": "^(.*)$"
              },
              "vcard:hasEmail": {
                "$id": "#/properties/permission/items/properties/assigner/properties/vcard:hasEmail",
                "type": "string",
                "title": "Email ",
                "default": "",
                "examples": [
                  "sales@companya.com"
                ],
                "pattern": "^(.*)$"
              }
            }
          },
          "assignee": {
            "$id": "#/properties/permission/items/properties/assignee",
            "type": "object",
            "title": "Subscriber",
            "required": [
              "@type",
              "uid",
              "vcard:fn",
              "vcard:hasEmail"
            ],
            "properties": {
              "@type": {
                "$id": "#/properties/permission/items/properties/assignee/properties/@type",
                "type": "array",
                "title": "The @type Schema",
                "items": {
                  "$id": "#/properties/permission/items/properties/assignee/properties/@type/items",
                  "type": "string",
                  "title": "The Items Schema",
                  "default": "PartyCollection",
                  "examples": [
                    "PartyCollection",
                    "vcard:Group"
                  ],
                  "pattern": "^(.*)$"
                }
              },
              "uid": {
                "$id": "#/properties/permission/items/properties/assignee/properties/uid",
                "type": "string",
                "title": "Company/Team URL",
                "default": "",
                "examples": [
                  "http://example.com/team/A"
                ],
                "pattern": "^(.*)$"
              },
              "vcard:fn": {
                "$id": "#/properties/permission/items/properties/assignee/properties/vcard:fn",
                "type": "string",
                "title": "Company / Team Name",
                "default": "",
                "examples": [
                  "Team A"
                ],
                "pattern": "^(.*)$"
              },
              "vcard:hasEmail": {
                "$id": "#/properties/permission/items/properties/assignee/properties/vcard:hasEmail",
                "type": "string",
                "title": "Email",
                "default": "",
                "examples": [
                  "teamA@example.com"
                ],
                "pattern": "^(.*)$"
              }
            }
          },
          "action": {
            "$id": "#/properties/permission/items/properties/action",
            "type": "array",
            "title": "Permitted Actions",
            "items": {
              "$id": "#/properties/permission/items/properties/action/items",
              "type": "object",
              "title": "The Items Schema",
              "required": [
                "@type",
                "action"
              ],
              "properties": {
                "@type": {
                  "$id": "#/properties/permission/items/properties/action/items/properties/@type",
                  "type": "string",
                  "title": "Type",
                  "default": "Action",
                  "examples": [
                    "Action"
                  ],
                  "pattern": "^(.*)$"
                },
                "action": {
                  "$id": "#/properties/permission/items/properties/action/items/properties/action",
                  "type": "array",
                  "title": "Permitted Actions",
                  "enum": ["use","deploy", "download", "execute", "train", "retrain"],
                  "default": "",
                  "examples": [
                    "install"
                  ],
                  "pattern": "^(.*)$"
                },
                "refinement": {
                  "$id": "#/properties/permission/items/properties/action/items/properties/refinement",
                  "type": "array",
                  "title": "Action Refinement Rules",
                  "items": {
                    "$id": "#/properties/permission/items/properties/action/items/properties/refinement/items",
                    "type": "object",
                    "title": "The Items Schema",
                    "required": [
                      "@type",
                      "leftOperand",
                      "operator",
                      "rightOperand"
                    ],
                    "properties": {
                      "@type": {
                        "$id": "#/properties/permission/items/properties/action/items/properties/refinement/items/properties/@type",
                        "type": "string",
                        "title": "The @type Schema",
                        "default": "Constraint",
                        "examples": [
                          "Constraint"
                        ],
                        "pattern": "^(.*)$"
                      },
                      "leftOperand": {
                        "$id": "#/properties/permission/items/properties/action/items/properties/refinement/items/properties/leftOperand",
                        "type": "string",
                        "title": "Constraint Type",
                        "default": "deliveryChannel",
                        "enum": ["deliveryChannel"],
                        "examples": [
                          "deliveryChannel"
                        ],
                        "pattern": "^(.*)$"
                      },
                      "operator": {
                        "$id": "#/properties/permission/items/properties/action/items/properties/refinement/items/properties/operator",
                        "type": "string",
                        "title": "The Operator Schema",
                        "default": "",
                        "examples": [
                          "eq"
                        ],
                        "pattern": "^(.*)$"
                      },
                      "rightOperand": {
                        "$id": "#/properties/permission/items/properties/action/items/properties/refinement/items/properties/rightOperand",
                        "type": "string",
                        "title": "The Rightoperand Schema",
                        "default": "",
                        "examples": [
                          "prodenvironment://subscriber/productionenvironment"
                        ],
                        "pattern": "^(.*)$"
                      }
                    }
                  }
                }
              }
            }
          },
          "constraint": {
            "$id": "#/properties/permission/items/properties/constraint",
            "type": "array",
            "title": "Action Constaints",
            "items": {
              "$id": "#/properties/permission/items/properties/constraint/items",
              "type": "object",
              "title": "The Items Schema",
              "required": [
                "@type",
                "leftOperand",
                "operator",
                "rightOperand"
              ],
              "properties": {
                "@type": {
                  "$id": "#/properties/permission/items/properties/constraint/items/properties/@type",
                  "type": "string",
                  "title": "The @type Schema",
                  "default": "Constraint",
                  "examples": [
                    "Constraint"
                  ],
                  "pattern": "^(.*)$"
                },
                "leftOperand": {
                  "$id": "#/properties/permission/items/properties/constraint/items/properties/leftOperand",
                  "type": "string",
                  "title": "Leftoperand",
                  "default": "",
                  "enum": ["count", "dateTime", "spatial"],
                  "examples": [
                    "dateTime"
                  ],
                  "pattern": "^(.*)$"
                },
                "operator": {
                  "$id": "#/properties/permission/items/properties/constraint/items/properties/operator",
                  "type": "string",
                  "title": "Operator",
                  "default": "",
                  "enum": ["eq", "gt", "gteq", "lt", "lteq"],
                  "examples": [
                    "lt"
                  ],
                  "pattern": "^(.*)$"
                },
                "rightOperand": {
                  "$id": "#/properties/permission/items/properties/constraint/items/properties/rightOperand",
                  "type": "object",
                  "title": "Rightoperand",
                  "required": [
                    "@value"
                  ],
                  "properties": {
                    "@value": {
                      "$id": "#/properties/permission/items/properties/constraint/items/properties/rightOperand/properties/@value",
                      "type": "string",
                      "title": "Limited to",
                      "default": "",
                      "examples": [
                        "2019-12-31"
                      ],
                      "pattern": "^(.*)$"
                    },
                    "@type": {
                      "$id": "#/properties/permission/items/properties/constraint/items/properties/rightOperand/properties/@type",
                      "type": "string",
                      "title": "Data format",
                      "default": "",
                      "enum": ["xsd:date", "xsd:dateTime"],
                      "examples": [
                        "xsd:date"
                      ],
                      "pattern": "^(.*)$"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}